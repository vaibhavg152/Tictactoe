<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.vaibhav.tictactoe.MainActivity">

    <Button
        android:id="@+id/a11"
        android:layout_width="140dp"
        android:layout_height="140dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/a12"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginStart="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/a11"
        app:layout_constraintStart_toEndOf="@+id/a11" />

    <Button
        android:id="@+id/a13"
        android:layout_width="140dp"
        android:layout_height="140dp"
        app:layout_constraintBottom_toBottomOf="@+id/a12"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toEndOf="@+id/a12" />

    <Button
        android:id="@+id/a21"
        android:layout_width="140dp"
        android:layout_height="140dp"
        app:layout_constraintEnd_toStartOf="@+id/a12"
        app:layout_constraintTop_toBottomOf="@+id/a11" />

    <Button
        android:id="@+id/a22"
        android:layout_width="140dp"
        android:layout_height="140dp"
        app:layout_constraintBottom_toBottomOf="@+id/a21"
        app:layout_constraintEnd_toStartOf="@+id/a13"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/a21" />

    <Button
        android:id="@+id/a23"
        android:layout_width="140dp"
        android:layout_height="140dp"
        app:layout_constraintBottom_toBottomOf="@+id/a22"
        app:layout_constraintEnd_toEndOf="@+id/a13"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/a22" />

    <Button
        android:id="@+id/a31"
        android:layout_width="140dp"
        android:layout_height="140dp"
        app:layout_constraintEnd_toStartOf="@+id/a22"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/a21" />

    <Button
        android:id="@+id/a32"
        android:layout_width="140dp"
        android:layout_height="140dp"
        app:layout_constraintBottom_toBottomOf="@+id/a31"
        app:layout_constraintEnd_toStartOf="@+id/a23"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/a22" />

    <Button
        android:id="@+id/a33"
        android:layout_width="140dp"
        android:layout_height="140dp"
        app:layout_constraintBottom_toBottomOf="@+id/a32"
        app:layout_constraintEnd_toEndOf="@+id/a23"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/a32" />

    <TextView
        android:id="@+id/result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You Challenged Shubham"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/a32" />

</android.support.constraint.ConstraintLayout>
